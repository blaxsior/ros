<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="bumperbot">
  <gazebo reference="wheel_right_link">
    <!-- 마찰력 -->
    <mu1>100000000000000.0</mu1>
    <mu2>100000000000000.0</mu2>
    <kp>1000000000000.0</kp>
    <kd>10.0</kd>
    <!-- simulation solver accuracy -->
    <minDepth>0.001</minDepth> 
    <maxVel>0.1</maxVel>
    <!-- directon of rotation wheel -->
    <fdirl>1 0 0</fdirl> 
  </gazebo>

  <gazebo reference="wheel_left_link">
    <mu1>100000000000000.0</mu1>
    <mu2>100000000000000.0</mu2>
    <kp>1000000000000.0</kp>
    <kd>10.0</kd>
    <!-- simulation solver accuracy -->
    <minDepth>0.001</minDepth> 
    <maxVel>0.1</maxVel>
    <!-- directon of rotation wheel -->
    <fdirl>1 0 0</fdirl> 
  </gazebo>

  <gazebo reference="caster_front_link">
    <!-- 시뮬레이션 영향 X -->
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <!-- simulation solver accuracy -->
    <minDepth>0.001</minDepth> 
    <maxVel>0.1</maxVel>
  </gazebo>

  <gazebo reference="caster_rear_link">
    <!-- 시뮬레이션 영향 X -->
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>10.0</kd>
    <!-- simulation solver accuracy -->
    <minDepth>0.001</minDepth> 
    <maxVel>0.1</maxVel>
  </gazebo>

  <!-- load proper control library version -->
  <gazebo>
    <!-- ros2 버전에 따라 다른 플러그인을 로드 -->
    <xacro:if value="$(arg is_ignition)">
      <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
        <parmeters>$(find bumperbot_controller)/config/bumperbot_controllers.yaml</parmeters>
      </plugin>
    </xacro:if>

    <xacro:unless value="$(arg is_ignition)">
      <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>$(find bumperbot_controller)/config/bumperbot_controllers.yaml</parameters>
      </plugin>
    </xacro:unless>
  </gazebo>
</robot>